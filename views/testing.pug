doctype html
head
  // Required meta tags
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
  // Bootstrap CSS
  link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css' integrity='sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T' crossorigin='anonymous')
  link(rel='stylesheet' type='text/css' href='../app/css/styles.css')
  title Hello, world!
.container
  .row.small-margin-top
    .col-lg-12
      .jumbotron.jumbotron-fluid
        .container
          h1.display-4 LMD Version Control System
          p.lead A lightweight, web-based, intuitive VCS.
  .row
    .col-lg-12
      .btn-group.btn-group-toggle(data-toggle='buttons')
        label.btn.btn-secondary
          input#create-repo-button(type='radio' name='create-repo-options' autocomplete='off')
          |  Create Repo
        label.btn.btn-secondary
          input#check-in-button(type='radio' name='check-in-options' autocomplete='off')
          |  Check In
        label.btn.btn-secondary
          input#check-out-button(type='radio' name='check-out-options' autocomplete='off')
          |  Check Out
  .row
    .col-lg-6
      form(action='/' method='POST')
        input#username.form-control.user-input.small-margin-bottom(type='text' name='username' placeholder='User')
        input#create-repo.form-control.user-input.small-margin-bottom(type='text' name='repoName' placeholder='Repo Name')
        input#version.form-control.user-input.small-margin-bottom(type='text' name='versionName' placeholder='Repo Version Number' disabled='')
        input#target-folder.form-control.user-input.small-margin-bottom(type='text' name='targetFolder' placeholder='Target Folder Path' disabled='')
        input#create-repo-button.btn.btn-outline-primary.small-margin-top(type='submit' onclick='createRepo()')
    .col-lg-6
      #repo-created
  //
    <div class="row">
    <div class="col-lg-12">
    <div id="repo-created" class="">
    </div>
    </div>
    </div>
  .row
    .col-lg-12
      .data-list
        h5  Database Folder List 
        .card(style="width: 18rem;")
            .card-body
                h5.card-title #{repoList[0]}
                ul
                    li Manifest 1
                    li Manifest 2
                a(href="#").btn.btn-primary Repo details
      
  //
    for future dev
    <input class="center user-input small-margin-bottom" type="button"  value = "Dont you dare to touch me" size="75" onclick="JStoNode()">
